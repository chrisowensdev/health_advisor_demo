{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@/app/*": ["src/app/*"],
			"@/components/*": ["src/components/*"],
			"@/lib/*": ["src/lib/*"],
			"@/data/*": ["src/content/*"],
			"@/types/*": ["src/types/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		// Nice quality-of-life flags (safe with Next + TS 5)
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": [
		"next-env.d.ts",
		"src",
		"types",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
